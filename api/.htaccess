# .htaccess para API PHP
# admin.nicebee.com.br/api/

RewriteEngine On

# Headers de segurança
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# CORS Headers (já definidos no cors.php, mas como backup)
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Responder a requisições OPTIONS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Roteamento da API
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Auth routes
RewriteRule ^auth/login/?$ auth/login.php [L,QSA]
RewriteRule ^auth/reset-password/?$ auth/reset-password.php [L,QSA]
RewriteRule ^auth/change-password/?$ auth/change-password.php [L,QSA]
RewriteRule ^auth/update-profile/?$ auth/update-profile.php [L,QSA]

# Clientes routes
RewriteRule ^clientes/?$ clientes/index.php [L,QSA]
RewriteRule ^clientes/([0-9]+)/?$ clientes/index.php/$1 [L,QSA]

# Planos routes
RewriteRule ^planos/?$ planos/index.php [L,QSA]
RewriteRule ^planos/([0-9]+)/?$ planos/index.php/$1 [L,QSA]

# Faturas routes
RewriteRule ^faturas/?$ faturas/index.php [L,QSA]
RewriteRule ^faturas/([0-9]+)/?$ faturas/index.php/$1 [L,QSA]
RewriteRule ^faturas/([0-9]+)/(marcar-pago)/?$ faturas/index.php/$1/$2 [L,QSA]
RewriteRule ^faturas/(gerar-mensais)/?$ faturas/index.php/$1 [L,QSA]

# Dashboard routes
RewriteRule ^dashboard/stats/?$ dashboard/stats.php [L,QSA]

# Backups routes
RewriteRule ^backups/?$ backups/index.php [L,QSA]
RewriteRule ^backups/(criar|restaurar)/?$ backups/index.php/$1 [L,QSA]
RewriteRule ^backups/cliente/([0-9]+)/?$ backups/index.php/cliente/$1 [L,QSA]

# Logs routes
RewriteRule ^logs/?$ logs/index.php [L,QSA]

# Bloquear acesso direto a arquivos de configuração
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "config/*">
    Order Deny,Allow
    Deny from all
</Files>

# Bloquear acesso a arquivos sensíveis
<FilesMatch "\.(env|log|sql)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Configurações PHP
php_value upload_max_filesize 50M
php_value post_max_size 50M
php_value max_execution_time 300
php_value memory_limit 256M

# Cache para arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Compressão
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Log de erros personalizado
ErrorLog logs/api_error.log
CustomLog logs/api_access.log combined